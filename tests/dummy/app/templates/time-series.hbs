<div class="col-md-10 col-md-offset-2 left-border main-content-container">
  <div class="chart-header">
    <h2>Time Series Chart</h2>
  </div>

  <div class="example-container">
    <div class="chart-container">
      {{time-series-chart
        barData=barData
        lineData=lineData
        selectedInterval=selectedInterval
        selectedSeedColor=selectedSeedColor
        barPadding=barPadding
        barGroupPadding=barGroupPadding
        barLeftOffset=barLeftOffset
        maxNumberOfLabels=maxNumberOfLabels
        yAxisFromZero=yAxisFromZero
        dynamicXAxis=dynamicXAxis
        hasXAxisTitle=hasXAxisTitle
        hasYAxisTitle=hasYAxisTitle
        xValueDisplayName=xValueDisplayName
        yValueDisplayName=yValueDisplayName
        xTitleHorizontalOffset=xTitleHorizontalOffset
        yTitleVerticalOffset=yTitleVerticalOffset
        maxNumberOfMinorTicks=maxNumberOfMinorTicks
        xAxisVertLabels=xAxisVertLabels
      }}
    </div>
  </div>

  <div class="row bumper-30">
    <div class="col-md-6">
      <h4>Ember Bindings</h4>

      <div class="form-horizontal">
        <div class="form-group" data-test="line-data">
          <label class="col-lg-4 control-label">Line Data</label>
          <div class="col-lg-8">
            {{view "select"
              content=availableLineDataSets
              value=selectedLineData
              class="form-control"
            }}
          </div>
        </div>
        <div class="form-group" data-test="bar-data">
          <label class="col-lg-4 control-label">Bar Data</label>
          <div class="col-lg-8">
            {{view "select"
                content=availableBarDataSets
                value=selectedBarData
                class="form-control"
            }}
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label" data-test="color">Color</label>
          <div class="col-lg-8">
            {{view "select"
              content=seedColorNames
              value=selectedSeedColorName
              class="form-control"
            }}
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label" data-test="tick-interval">Tick Interval</label>
          <div class="col-lg-8">
            {{view "select"
                content=tickIntervals
                value=selectedInterval
                class="form-control"
                disabled=dynamicXAxis
            }}
          </div>
        </div>
        {{partial "axis-title-config"}}
        <div class="form-group">
          <label class="col-lg-4 control-label">Bar Padding</label>
          <div class="col-lg-8">
          {{scrubber-component min="0" max="1" step="0.05" value=barPadding}}
            <span class="help-block">Bar Padding: {{barPadding}} </span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Bar Group Padding</label>
          <div class="col-lg-8">
            {{scrubber-component min="0" max="1" step="0.05" value=barGroupPadding}}
            <span class="help-block">Bar Group Padding: {{barGroupPadding}} </span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Bar Left Offset</label>
          <div class="col-lg-8">
            {{scrubber-component min="0" max="1" step="0.05" value=barLeftOffset}}
            <span class="help-block">Bar Left Offset: {{barLeftOffset}} </span>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-4 col-lg-8">
            <div class="checkbox" data-test="y-axis-from-zero">
              <label>{{input type="checkbox" checked=yAxisFromZero }} Force Y-Axis From Zero</label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-4 col-lg-8">
            <div class="checkbox">
              <label>{{input type="checkbox" class="dynamicXAxis" checked=dynamicXAxis}} Use Dynamic X-Axis</label>
            </div>
          </div>
        </div>
        {{#if dynamicXAxis}}
          <div class="form-group">
            <label class="col-lg-4 control-label">Maximum Number of Labels (for use with a Dynamic X-Axis)</label>
            <div class="col-lg-8">
              {{scrubber-component min="2" max="30" step="1" class="maxNumberOfLabels" value=maxNumberOfLabels}}
              <span class="help-block">Maximum Number of Labels: {{maxNumberOfLabels}}</span>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-4 control-label">Number of Allowable Minor Ticks</label>
            <div class="col-lg-8">
              {{scrubber-component min="0" max="5" step="1" class="maxNumberOfMinorTicks" value=maxNumberOfMinorTicks}}
              <span class="help-block">Maximum Number of Minor Ticks: {{maxNumberOfMinorTicks}}</span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-offset-4 col-lg-8">
              <div class="checkbox">
                <label>{{input type="checkbox" checked=xAxisVertLabels}} Rotate Axis Labels</label>
              </div>
            </div>
          </div>
        {{/if}}
      </div>
    </div>

    <div class="col-md-6">
      <h4>JSON Data</h4>
      <div class="chart-json">
        <pre>{{prettyPrintedData}}</pre>
      </div>
    </div>
  </div>
</div>
