<div class="col-md-10 col-md-offset-2 left-border main-content-container">
  <div class="chart-header">
    <h2>Stacked Bar Chart</h2>
  </div>

  <div class="example-container">
    <div class="chart-container">
      {{stacked-vertical-bar-chart
        maxBarThickness=maxBarThickness
        selectedSeedColor=selectedSeedColor
        data=data
        maxLabelHeight=maxLabelHeight
        withinGroupPadding=withinGroupPadding
        betweenGroupPadding=betweenGroupPadding
        hasXAxisTitle=hasXAxisTitle
        hasYAxisTitle=hasYAxisTitle
        xValueDisplayName=xValueDisplayName
        yValueDisplayName=yValueDisplayName
        xTitleHorizontalOffset=xTitleHorizontalOffset
        yTitleVerticalOffset=yTitleVerticalOffset
        strokeWidth=strokeWidth
      }}
    </div>
  </div>

  <div class="row bumper-30">
    <div class="col-md-6">
      <h4>Ember Bindings</h4>

      <div class="form-horizontal">
        <div class="form-group" data-test="data">
          <label class="col-lg-4 control-label">Data</label>
          <div class="col-lg-8">
            {{view "select"
              content=availableDataSets
              value=selectedData
              class="form-control"
            }}
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label" data-test="color">Color</label>
          <div class="col-lg-8">
            {{view "select"
              content=seedColorNames
              value=selectedSeedColorName
              class="form-control"
            }}
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Rotated Label Height</label>
          <div class="col-lg-8">
            {{scrubber-component min="20" max="100" value=maxLabelHeight}}
            <span class="help-block">Max Label Height: {{maxLabelHeight}}</span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Between Bar Padding</label>
          <div class="col-lg-8">
            {{scrubber-component min="0" max="2" step="0.05" value=betweenGroupPadding}}
            <span class="help-block">Between Bar Padding: {{betweenGroupPadding}}</span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Slice Outline Thickness</label>
          <div class="col-lg-8">
            {{scrubber-component min="0" max="5" step="0.1" value=strokeWidth}}
            <span class="help-block">Slice Outline Thickness: {{strokeWidth}}</span>
          </div>
        </div>

        {{partial "axis-title-config"}}
      </div>
    </div>

    <div class="col-md-6">
      <h4>JSON Data</h4>
      <div class="chart-json">
        <pre>{{prettyPrintedData}}</pre>
      </div>
    </div>
  </div>
</div>
