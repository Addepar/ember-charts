<div class="col-md-10 col-md-offset-2 left-border main-content-container">
  <div class="chart-header">
    <h2>Vertical Bar Chart</h2>
  </div>

  <div class="example-container">
    <div class="chart-container">
      {{vertical-bar-chart
        maxBarThickness=maxBarThickness
        selectedSeedColor=selectedSeedColor
        data=data
        maxLabelHeight=maxLabelHeight
        withinGroupPadding=withinGroupPadding
        betweenGroupPadding=betweenGroupPadding
        stackBars=stackBars
        hasXAxisTitle=hasXAxisTitle
        hasYAxisTitle=hasYAxisTitle
        xValueDisplayName=xValueDisplayName
        yValueDisplayName=yValueDisplayName
        xTitleHorizontalOffset=xTitleHorizontalOffset
        yTitleVerticalOffset=yTitleVerticalOffset
      }}
    </div>
  </div>

  <div class="row bumper-30">
    <div class="col-md-6">
      <h4>Ember Bindings</h4>

      <div class="form-horizontal">
        <div class="form-group" data-test="data">
          <label class="col-lg-4 control-label">Data</label>
          <div class="col-lg-8">
            <select class="form-control ember-select" onchange={{action (mut selectedData) value="target.value"}}>
              {{#each availableDataSets as |dataSet|}}
                <option value="{{dataSet}}">{{dataSet}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label" data-test="color">Color</label>
          <div class="col-lg-8">
            <select class="form-control ember-select" onchange={{action (mut selectedSeedColorName) value="target.value"}}>
              {{#each seedColorNames as |seedColorName|}}
                <option value="{{seedColorName}}">{{seedColorName}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Rotated Label Height</label>
          <div class="col-lg-8">
            {{scrubber-component min="20" max="100" value=maxLabelHeight}}
            <span class="help-block">Max Label Height: {{maxLabelHeight}}</span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Between Group Padding</label>
          <div class="col-lg-8">
            {{scrubber-component min="0" max="2" step="0.05" value=betweenGroupPadding}}
            <span class="help-block">Between Group Padding: {{betweenGroupPadding}}</span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-4 control-label">Within Group Padding</label>
          <div class="col-lg-8">
            {{scrubber-component min="0" max="2" step="0.05" value=withinGroupPadding}}
            <span class="help-block">Within Group Padding: {{withinGroupPadding}}</span>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-offset-4 col-lg-8">
            <div class="checkbox">
              <label>
                {{input type="checkbox" checked=stackBars}} Stacked Bars
              </label>
            </div>
          </div>
        </div>

        {{partial "axis-title-config"}}
      </div>
    </div>

    <div class="col-md-6">
      <h4>JSON Data</h4>
      <div class="chart-json">
        <pre>{{prettyPrintedData}}</pre>
      </div>
    </div>
  </div>
</div>
